!!!
%html.colorset-1-light-stripe-bg
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    = stylesheet_link_tag 'normalize', 'style'
    = javascript_include_tag 'jquery', 'application', 'jquery.easing.1.3', 'videoball'
    = favicon_tag 'favicon.png', :type => 'image/png'
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}
    %title VIDEOBALL

%body
  .sideline-nav.colorset-1-topstripe
    %header.row
      .large-12.small-centered.columns
        %ul.small-block-grid-2.large-block-grid-5
          %li.colorset-1-toplink
            %a{:href => "#", :onclick => "return false;"} BUY NOW
          %li.colorset-1-toplink
            %a{:href => "#", :onclick => "return false;"} NEWS
          %li.colorset-1-toplink
            %a{:href => "#", :onclick => "return false;"} LIVE STREAMS
          %li.colorset-1-toplink
            %a{:href => "#", :onclick => "return false;"} LEADERBOARDS
          %li.colorset-1-toplink
            %a{:href => "#", :onclick => "return false;"} LOG IN
  .videoball-logo-container-stripe.emtop-margin
    .row
      .large-10.large-centered.columns
        %noscript
          .videoball-title
            %a{:href => "#", :onclick => "return false;"}
              %img{:src => "images/logo.png"}
        :javascript
          $('noscript').remove();
        .videoball-title.slide-in
          %a{:href => "#", :onclick => "return false;"}
            %img{:src => "images/logo.png"}
  
  = yield

  .sideline-nav.colorset-1-footerstripe.emtop-margin
    %footer.row
      .large-4.small-centered.columns.emtop-margin.embottom-margin
        %a{:href => "http://actionbutton.com", :target => "_blank"}
          %img{:src => "images/actionButtonLogo-2000.png"}
